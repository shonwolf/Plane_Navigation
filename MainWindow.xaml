<Window x:Class="FlightgearSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightgearSimulator"
        mc:Ignorable="d"
        xmlns:my="clr-namespace:FlightSimulator.Views"
        Title="Flight Simulator" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <my:FlightBoard x:Name="FlightBoard" Grid.Column="0"/>
        <my:Joystick x:Name="joystick" Grid.Column="1"/>
    </Grid>
</Window>
